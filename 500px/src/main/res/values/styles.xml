<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.NoActionBar.Base">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextView.Small" parent="TextView">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.Medium" parent="TextView">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TextView.Micro" parent="TextView">
        <item name="android:textSize">@dimen/text_size_micro</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.MainActivity" parent="AppTheme.NoActionBar">
    </style>

    <style name="AppTheme.GalleryActivity" parent="AppTheme.NoActionBar">
        <item name="android:actionBarStyle">@style/GalleryActionBar</item>
    </style>
</resources>
